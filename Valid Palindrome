class Solution {
    public boolean isPalindrome(String s) {
        s=s.replaceAll("[^a-zA-Z0-9]","");
        String str1=s.toLowerCase();
        StringBuffer sb=new StringBuffer(str1);
        sb.toString();
        sb.reverse();
        System.out.println(sb);
        if(str1.contentEquals(sb)==true){
            return true;
        }
        else{
            return false;
        }
    }
}
